@model WebStore.Models.Employee
<!DOCTYPE html>

<div class="container">
    <h1>Карточка сотрудника: @Model.LastName @Model.FirstName</h1>
    <table class="table">
        <tr>
            <td>Фамилия</td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td>Имя</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Отчество</td>
            <td>@Model.Patronymic</td>
        </tr>
        <tr>
            <td>Возраст</td>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <td>Дата рождения</td>
            <td>@Model.BirthDay.ToString("dd.MM.yyyy")</td>
        </tr>
    </table>
    <hr />
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">
        <i class="fa fa-edit"></i>Редактировать
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fa fa-trash-o"></i>Удалить
    </a> 
    <a asp-action="Index" class="btn btn-default">Назад к списку сотрудников</a>
</div>
